<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colormerge"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colormerge"
        >
        <Button
            android:layout_width="40dp"
            android:id="@+id/BT_back"
            android:layout_height="40dp"
            android:background="@drawable/ic_back"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="23dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp">
                <RelativeLayout
                    android:id="@+id/i"
                    android:layout_marginLeft="55dp"
                    android:layout_width="70dp"
                    android:layout_height="65dp">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round">
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/r"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:padding="1dp"
                        android:id="@+id/o"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/round">
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/r"/>
                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:padding="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/i"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/round">

                    <de.hdodenhof.circleimageview.CircleImageView
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/r"/>

                </RelativeLayout>

                <TextView
                    android:layout_toEndOf="@id/i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/coloryellow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:id="@+id/linHome"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_home"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linProfile"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_profile"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linEvents"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/ic_events"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linFavorite"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/ic_favorites"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linIndex"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/ic_messages"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inbox"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:id="@+id/linContact"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/ic_contact"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linFeedBack"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/ic_feedback"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed back"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linSetting"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/ic_settings"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:textSize="22sp"
            android:paddingLeft="35dp"
            android:textColor="@android:color/white"
            android:background="@color/colormerge"
            />
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/linearMySchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_school"
                    />

                <TextView
                    android:textColor="@color/colormerge"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="My Schools"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colormerge"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearAddSchool"

                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_pencil"
                    />
                <TextView
                    android:textColor="@color/colormerge"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add a school"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    />

            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colormerge"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/linearHowApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_hschool"
                    />
                <TextView
                    android:textColor="@color/colormerge"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to use Application"
                    android:textSize="14sp"
                    />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLogOut"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/logout"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>